<%= filter_form_for filter do |form| %>
  <div class="filters__section">
    <div class="filters__search">
      <div class="input-group">
        <%= form.search_field :search_text, label: false, class: "input-group-field", placeholder: t(".filters.search"), title: t(".filters.search") %>
        <div class="input-group-button">
          <button type="submit" class="button button--muted">
            <%= icon "magnifying-glass", aria_label: t(".filters.search") %>
          </button>
        </div>
      </div>
    </div>
  </div>

  <% if component.settings.plan_answering_enabled && component.current_settings.plan_answering_enabled %>
    <%= form.collection_radio_buttons :state, [["all", t(".filters.state.all")], ["accepted", t(".filters.state.accepted")], ["rejected", t(".filters.state.rejected")], ["evaluating", t(".filters.state.evaluating")]], :first, :last, legend_title: t(".filters.state.legend") %>
  <% end %>

  <% if available_tags.any? %>
    <%= form.collection_check_boxes :tag_id, available_tags, ->(p) { "#{p.id}" }, ->(p) { translated_attribute(p.name) }, legend_title: t(".filters.tag"), disable_parents: false, label: false, prompt: t(".filters.tag_prompt") %>
  <% end %>

  <%= hidden_field_tag :order, order, id: nil, class: "order_filter" %>
<% end %>
