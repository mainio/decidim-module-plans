<div class="filters-controls hide-for-mediumlarge">
  <button data-open="filter-box" class="filters-controls__trigger">
    <%= t ".filters.filter" %>
    <%= icon "caret-bottom", class: "icon--small float-right", aria_label: t(".filters.unfold"), role: "img" %>
  </button>
</div>

<div class="reveal" id="filter-box" data-reveal>
  <div class="reveal__header">
    <h3 class="reveal__title"><%= t ".filters.filter_by" %>:</h3>
    <button class="close-button" data-close aria-label="<%= t(".filters.close_modal") %>" type="button">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <div class="filters">
    <%= render :filters %>
  </div>
</div>
