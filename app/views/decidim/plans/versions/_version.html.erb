<div class="card--list__item">
  <div class="card--list__text">
    <div>
      <%= link_to plan_version_path(item, index + 1) do %>
        <h4 class="card--list__heading heading6">
          <%= t(".version_index", index: index + 1) %>
        </h4>
      <% end %>
      <div class="author-data">
        <%= render_resource_editor(version) %>
        <%= l version.created_at, format: :decidim_short %>
      </div>
    </div>
  </div>
  <div class="card--list__data">
    <%= link_to plan_version_path(item, index + 1), class: "card--list__data__icon" do %>
      <%= icon "arrow-right-line", aria_hidden: true, role: "img" %>
    <% end %>
  </div>
</div>
